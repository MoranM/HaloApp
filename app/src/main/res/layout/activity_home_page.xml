<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:id="@+id/main_bg"
        android:background="@drawable/app_main_bg"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#80000000"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:id="@+id/actions_container"

        >
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:id="@+id/share_fb"
            android:background="@drawable/share_fb_selector"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:id="@+id/share_twitter"
            android:background="@drawable/share_twitter_selector"
            android:layout_toRightOf="@+id/share_fb"
            android:layout_centerVertical="true"
            />
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:id="@+id/like_btn"
            android:background="@drawable/like"
            android:layout_toRightOf="@+id/share_twitter"
            android:layout_centerVertical="true"
            />
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:id="@+id/share_wa"
            android:background="@drawable/share_wa_selector"
            android:layout_toRightOf="@+id/like_btn"
            android:layout_centerVertical="true"
            />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:id="@+id/share_mail"
            android:background="@drawable/share_mail_selector"
            android:layout_toRightOf="@+id/share_wa"
            android:layout_centerVertical="true"
            />

        </RelativeLayout>

</RelativeLayout>